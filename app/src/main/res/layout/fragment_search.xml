<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.homepage.Search">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Search"
            android:id="@+id/toolbar_main"
            android:elevation="1dp"
            tools:targetApi="lollipop" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
         <com.google.android.material.card.MaterialCardView
             android:layout_width="170dp"
             android:layout_height="120dp"
             android:layout_marginTop="20dp"
             android:layout_marginStart="20dp"
             android:layout_marginLeft="20dp"
             android:id="@+id/cardPhysicalActivities"
             app:cardElevation="2dp">
         </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/cardEntertainment"
                app:cardElevation="2dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/cardYoga"
                app:cardElevation="2dp">
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/cardDance"
                app:cardElevation="2dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/cardMeditation"
                app:cardElevation="2dp">
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/cardSwimming"
                app:cardElevation="2dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>