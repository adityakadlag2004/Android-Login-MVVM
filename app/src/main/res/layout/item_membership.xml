<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_imageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="30sp"
            android:contentDescription="@string/todo"
            android:src="@drawable/yoga" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/item_imageView"
            android:layout_toRightOf="@+id/item_imageView"
            android:text="@string/title"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_BookedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/item_imageView"
            android:layout_toRightOf="@+id/item_imageView"
            android:text="@string/booked_date"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_EndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_BookedDate"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/item_imageView"
            android:layout_toRightOf="@+id/item_imageView"
            android:text="@string/till_date"
            android:textColor="@color/grey"
            android:textSize="18sp" />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
